<!DOCTYPE html>
<html lang="es">
<head>
    <title>Tienda Virtual</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Karma" rel="stylesheet">

    <style>
        body, h1, h2, h3, h4, h5, h6 {
            font-family: "Karma", sans-serif;
        }

        .top-menu {
            max-width: 1200px;
            margin: auto;
        }
    </style>
</head>
<body>

    <div class="fixed-top bg-white shadow">
        <nav class="navbar bg-light">
            <div class="container-fluid">
                <button class="btn btn-outline-secondary" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasMenu">☰</button>
                <span class="navbar-text mx-auto" style="font-size: 24px; font-weight: bold;"><a href="/#Food" class="d-block py-2 text-dark text-decoration-none"> My Food</a> </span>
                <span>
                    <div class="position-absolute top-0 end-0 m-3">
                        <button type="button" class="btn btn-outline-primary"onclick="Go_Carryout('/Carryout/Index')" > Car 🛒</button>

                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                            @TempData["items"]
                            <span class="visually-hidden">unread messages</span>
                        </span>
                        </button>
                    </div>
                </span>

            </div>
        </nav>
    </div>

    <!-- Offcanvas Sidebar -->
    <div class="offcanvas offcanvas-start" data-bs-scroll="true" tabindex="-1" id="offcanvasMenu" aria-labelledby="offcanvasMenuLabel">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="offcanvasMenuLabel">Menú</h5>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
           
            <a href="/#Food" class="d-block py-2 text-dark text-decoration-none" onclick="closeAndRedirect('/#Food')">Food</a>
            <a href="/#About" class="d-block py-2 text-dark text-decoration-none" onclick="closeAndRedirect('/#About')">About</a>
            
            <!-- Redirección con JavaScript -->
            
        </div>
    </div>

    <script>
        function Go_Carryout(url)
        {
            window.location.href = url;
        }
        function closeAndRedirect(url) {
            // Cerrar el offcanvas
            var myOffcanvas = document.getElementById('offcanvasMenu');
            var offcanvas = new bootstrap.Offcanvas(myOffcanvas);
            offcanvas.hide();

            // Redirigir después de cerrar
            window.location.href = url;
        }
    </script>

    <hr id="Food">
    <!-- Contenido principal -->
    <div class="container mt-5 pt-5">
        @RenderBody()
    </div>

    <hr id="About">

    <!-- About Section -->
    <div class="container text-center py-5">
        <h3>About Me, The Mechatronics Man</h3>
        <img src="/images/Me.png" class="img-fluid rounded" alt="Me" width="300" height="433">
        <div>
            <h4><b>I am Who I Am!</b></h4>
            <h6><i>With Passion For Real, Technology things</i></h6>
            <p>Just me, myself and I, exploring the universe of unknownment...</p>
        </div>
    </div>

    <hr>

    <!-- Footer -->
    <footer class="container py-4">
        <div class="row">
            <div class="col-md-4">
                <h3>FOOTER</h3>
                <p>Praesent tincidunt sed tellus ut rutrum...</p>
            </div>

            <div class="col-md-4">
                <h3>BLOG POSTS</h3>
                <ul class="list-unstyled">
                    <li class="d-flex align-items-center mb-3">
                        <img src="/w3images/workshop.jpg" class="me-2" width="50">
                        <div>
                            <span class="fw-bold">Lorem</span><br>
                            <span>Sed mattis nunc</span>
                        </div>
                    </li>
                    <li class="d-flex align-items-center">
                        <img src="/w3images/gondol.jpg" class="me-2" width="50">
                        <div>
                            <span class="fw-bold">Ipsum</span><br>
                            <span>Praes tinci sed</span>
                        </div>
                    </li>
                </ul>
            </div>

            <div class="col-md-4">
                <h3>POPULAR TAGS</h3>
                <p>
                    <span class="badge bg-dark">Travel</span>
                    <span class="badge bg-secondary">New York</span>
                    <span class="badge bg-secondary">Dinner</span>
                    <span class="badge bg-secondary">Salmon</span>
                    <span class="badge bg-secondary">France</span>
                </p>
            </div>
        </div>
    </footer>


    
    <!-- Bootstrap JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
